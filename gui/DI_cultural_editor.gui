						layoutpolicy_horizontal = expanding
						margin = { 10 0 }
						text = "[CultureInnovationType.GetName|T]"
					}

					expand = {}

					vbox = {
						text_single = {
							layoutpolicy_horizontal = expanding
							align = right
							text = "INNOVATION_TOOLTIP_TYPE"
						}

						spacer = {
							size = { 5 5 }
						}

						text_single = {
							layoutpolicy_horizontal = expanding
							align = right
							text = "INNOVATION_TOOLTIP_ERA"
						}
