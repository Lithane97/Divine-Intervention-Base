			margin = { 20 20 }
			spacing = 15
			direction = vertical
			ignoreinvisible = yes

			widget = {
				name = "header"
				size = { 500 60 }

				background = {
					using = Background_Area_Dark
					margin = { 15 10 }
				}

				hbox = {
					minimumsize = { 500 0 }
					set_parent_size_to_minimum = yes

					widget = {
						size = { 90 60 }
